---
import { Hero } from '@/partials/Hero';
import { PersonalInfo } from '@/partials/PersonalInfo';
import { Recommendations } from '@/partials/Recommendations';
import Base from '@/templates/Base.astro';
import JobList from '@/templates/JobList.astro';
import { AppConfig } from '@/utils/AppConfig';

const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <Hero />
  <Recommendations />

  <main id='resume' class='container mx-auto p-4'>
    <div class='container mx-auto p-0 md:p-4'>
      <div class='gap-4 md:grid md:grid-cols-3'>
        <!-- Skillset Section: 1/3 of the space -->
        <div class='md:col-span-1'>
          <PersonalInfo />
        </div>

        <!-- Work Experience Section: 2/3 of the space -->
        <div class='md:col-span-2'>
          <!--Experience-->
          <div class='mb-4 rounded-lg bg-white p-6 shadow-md'>
            <h2 class='mb-6 text-2xl font-bold'>Experience</h2>
            <JobList />
          </div>

          <!--Education-->
          <div class='rounded-lg bg-white p-6 shadow-md'>
            <h2 class='mb-6 text-2xl font-bold'>Education</h2>

            <div class='mb-2 flex items-center'>
              <img
                src='assets/logos/texasstate_logo.jpeg'
                alt='TexasState'
                class='mr-3 h-8 w-8'
              />
              <div class='grow'>
                <h3 class='text-lg font-semibold'>
                  BBA, Computer Information Systems
                </h3>
                <p class='text-gray-500'>
                  Texas State University â€¢ San Marcos, TX
                </p>
              </div>
              <p class='mb-2 text-gray-700'>Aug 2007 - Dec 2012</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
