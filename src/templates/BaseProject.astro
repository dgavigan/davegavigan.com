---
// import type { IFrontmatter } from 'astro-boilerplate-components';

// import { BlogPost } from '@/partials/BlogPost';
import { ProjectPost } from '@/partials/ProjectPost';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  content: any;
}

const { content } = Astro.props as Props;
const title = `${content.title} - ${AppConfig.site_name}`;
---

<Base head={{ title, description: content.description }}>
  <header class='bg-white shadow'>
    <nav class='container mx-auto flex justify-start p-4'>
      <a href='/' class='mx-4 text-lg text-gray-700 hover:text-gray-900'
        >Resume
      </a>
      <a
        href='/portfolio/'
        class='mx-4 text-lg text-gray-700 hover:text-gray-900'
        >Portfolio
      </a>
    </nav>
  </header>

  <!--div class='relative'>
    <img
      class='h-64 w-full object-cover'
      src={content.imageSrc}
      alt='Header Image'
    />
    <div
      class='absolute bottom-0 h-20 w-full bg-gradient-to-t from-white to-transparent'
    >
    </div>
  </div-->
  <div class='relative'>
    <img
      class='h-64 w-full object-cover'
      src={content.imageSrc}
      alt='Project Image'
    />
    <div class='absolute inset-0 bg-black bg-opacity-50'></div>
    <h1 class='absolute inset-x-0 bottom-0 p-4 text-3xl font-bold text-white'>
      {content.title}
    </h1>
  </div>

  <ProjectPost frontmatter={content}>
    <slot></slot>
  </ProjectPost>
</Base>
